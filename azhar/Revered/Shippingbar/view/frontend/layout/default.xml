<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <block class="Revered\Shippingbar\Block\Entity\FreeShippingBar"
                   name="sparsh.free-shipping.bar.top"
                   template="Revered_Shippingbar::free_shipping_bar.phtml"
                   before="-">
                    <arguments>
                        <argument name="position" xsi:type="string">page_top</argument>
                    </arguments>
            </block>
            <block class="Revered\Shippingbar\Block\Entity\FreeShippingBar"
                   name="sparsh.free-shipping.bar.bottom"
                   template="Revered_Shippingbar::free_shipping_bar.phtml"
                   after="-">
                <arguments>
                    <argument name="position" xsi:type="string">page_bottom</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
